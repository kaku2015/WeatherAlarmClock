<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="wea_degree">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="wea_prompt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:text">@string/no</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_trans90</item>
    </style>

    <style name="wea_forecast_llyt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="wea_forecast_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white_trans90</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="wea_forecast_content_llyt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="wea_forecast_content_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/ic_weather_no</item>
    </style>

    <style name="wea_forecast_content_degree_rlyt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="wea_forecast_content_degree_rlyt_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/white_trans90</item>
        <item name="android:text">@string/dash_degree</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="wea_forecast_content_detail">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/no</item>
        <item name="android:textColor">@color/white_trans90</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="divider_line_wea">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/white_trans20</item>
    </style>

    <style name="divider_line_wea_vertical">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white_trans20</item>
    </style>

    <style name="wea_days_title_llyt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">19dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="wea_days_title_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_trans90</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="wea_area_llyt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black_trans20</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="wea_days_forecast_llyt">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="wea_days_forecast_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_trans90</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="wea_days_forecast_tv_trans">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_trans40</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="wea_days_forecast_tv2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_trans90</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="wea_days_forecast_tv2_trans">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_trans40</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="wea_days_forecast_iv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="wea_days_forecast_iv_trans">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:alpha">0.4</item>
    </style>

    <style name="wea_life_index_rlyt_left">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_life_index_item_pressed</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:layout_marginLeft">19dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="wea_life_index_rlyt_right">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_life_index_item_pressed</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:layout_marginRight">19dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="wea_life_index_iv_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="wea_life_index_iv_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginLeft">19dp</item>
    </style>

    <style name="wea_life_index_tv_detail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/no</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">19dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/white_trans60</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="wea_life_index_tv_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">19dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/white_trans90</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="divider_line_wea_life_index_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/white_trans20</item>
        <item name="android:layout_marginLeft">19dp</item>
        <item name="android:layout_marginRight">19dp</item>
    </style>

</resources>
